<div class="container">
  <div class="row justify-content-center">
    <h3>管理者ログイン</h3>
  </div>

  <div class="row justify-content-center mt-3">
    <table class="table-borderless">
      <%= form_with model: [:admin, @admin], url: admin_login_path, local:true do |f| %>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td><%= f.email_field :email, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :password, "パスワード" %></td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン", class: "btn btn-secondary btn-sm" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
