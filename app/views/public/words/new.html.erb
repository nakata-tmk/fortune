<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h3>新規投稿</h3>
      <div id="message">
        <% if @word.errors.any? %>
          <% @word.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        <% end %>
      </div>
      <%= form_with model: @word, local: true do |f| %>
        <table class="table-borderless">
          <tr><td><%= f.text_area :body, size: "50x5" %></td></tr>
          <tr><td><%= f.submit '投稿', class: 'btn btn-primary btn-sm' %></td></tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
