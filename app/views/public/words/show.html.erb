<div class="container">
  <div class="row justify-content-center">
    <h3>投稿内容</h3>
  </div>

  <div class="row justify-content-center">
    <div class="show-back">
      <div class="show-text">
        <p class="mb-3"><%= @word.created_at.strftime('%Y/%m/%d') %></p>
        <p class="mb-4"><%= @word.body %></p>
      </div>
    </div>
  </div>


  <div class="row justify-content-center mt-2 mb-5">
    <div id="favorite_<%= @word.id %>">
      <%= render partial: 'public/favorites/favorites', locals: { word: @word } %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div id="message">
      <% if @comment.errors.any? %>
        <% @comment.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <h3>コメント</h3>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-6">
      <%= form_with model:[@word, @comment], local: true do |f| %>
        <%= f.text_area :body, placeholder: "コメントを入力", size: "40x3" %>
        <%= f.submit "コメント", class: "btn btn-primary btn-sm mb-4" %>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-8">
      <table class="table-borderless">
        <% @word.comments.each do |comment| %>
          <tr>
            <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= comment.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>